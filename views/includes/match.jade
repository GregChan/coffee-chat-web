div(class="section white profile-section match#{match.userID}" id="match-profile")
    h4(class="center text-orange") CoffeeChat Connected!
    div(class="row container profile-container")
        div(class="col s12 m3 l3")
            a(href="" id="match-link")
                img(class="responsive-img circle coffee-chat-circle" id="match-pic" src="public/images/generic-profile.png")
                h5(class="center text-grey" id="match-name") Match Name
                h6(class="center text-grey" id="match-title") Match Title
        div(class="col s12 m3 l3")
            h5(class="section-title text-orange") Work Experience
            div(class="spacer-15")
            div("work-container")
        div(class="col s12 m3 l3")
            h5(class="section-title text-orange") Education
            div(class="spacer-15")
            div("education-container")
        div(class="col s12 m3 l3")
            h5(class="section-title text-orange") Interests
            div(class="spacer-15")
            div("interests-container")
div(class="section coffee-chat-orange-background #{match.userID}" id="match-reasons")
    div(class="center")
        h4(class="section-title text-orange") Why Did We Match?
    div(class="row container")
        div(class="center col s12 m4 l4")
            i(class="material-icons large text-orange") done
            p(class="text-grey flow-text") You both attend Northwestern University.
        div(class="center col s12 m4 l4")
            i(class="material-icons large text-orange") done
            p(class="text-grey flow-text") You are both interested in software development.
        div(class="center col s12 m4 l4")
            i(class="material-icons large text-orange") done
            p(class="text-grey flow-text") You both have a passion for DJing!
div(class="section white #{match.userID}" id="match-actions")
    div(class="container center")
        h5(class="section-title text-orange") Match Details
        div(class="row center-align valign-wrapper")
            div(class="right-align col s3")
                i(class="material-icons large text-grey valign") date_range
            div(class="left-align col s3")
                h5(class="text-grey") March 10
                h6(class="text-grey") 12:30 PM
                h6(class="text-grey") Tech Express
            div(class="right-align col s3")
                a(class="waves-effect waves-orange valign")
                    i(class="material-icons large text-orange") done  
            div(class="left-align col s3")
                a(class="waves-effect valign")
                    i(class="material-icons large text-grey") clear            

script(src="https://code.jquery.com/jquery-2.2.0.min.js")
script var matchId = !{match.userID}
script(src="/public/js/match.js")