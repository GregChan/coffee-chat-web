html
	head
		link(href='https://fonts.googleapis.com/css?family=Source+Sans+Pro' rel='stylesheet' type='text/css')
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css")
		link(rel="stylesheet" href="/public/css/index.css")
	body
		include ./includes/header.jade
		h2(class="center text-orange") Profile Settings
		div(class="row container")
			div(class="col s12 m6 l6")
				ul(class="collapsible z-depth-0" data-collapsible="expandable")
					li
						div(class="collapsible-header active")
							div #{profile.firstName} #{profile.lastName}
						div(class="collapsible-body")
							img(class="responsive-img coffee-chat-circle" src=profile.profilePic)
					li
						div(class="collapsible-header active")
							div Email
						div(class="collapsible-body")
							div(class="coffee-chat-collapsible-body")=profile.email
					li
						div(class="collapsible-header active")
							div Headline
						div(class="collapsible-body")
							div(class="coffee-chat-collapsible-body")=profile.headLine
				div(class="center")
					a(class="btn btn-outline modal-trigger" href="#settings-modal") Edit Profile

			div(class="col s12 m6 l6")
				ul(class="collapsible z-depth-0" data-collapsible="expandable")
					for community in communities
						for field, index in community.fields
							- var color = "coffee-chat-grey-background"
							li
								div(class="collapsible-header active")
									div=field.name
								div(class="collapsible-body")
									if (field.grouped == true)
										for key in field.values
											div(class="coffee-chat-collapsible-body")=key.name
												for item in key.values
													div(class="coffee-chat-collapsible-body")=item.name
									else
										if (field.displayType == 1)
											for item in field.values	
												div(class="coffee-chat-collapsible-body")=item.name
										if (field.displayType == 2)
											for item in field.values
												div(class="coffee-chat-collapsible-body")=item.name

		div(id="settings-modal" class="modal modal-fixed-footer")
			div(class="modal-content")
				h4 Edit Profile
				include ./includes/survey.jade
			div(class="modal-footer")
				a(class="modal-action modal-close btn-flat") cancel
				a(class="modal-action modal-close btn-flat" class="submit") save
	include ./includes/footer.jade
	script(src="https://code.jquery.com/jquery-2.2.0.min.js")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js")
	script(src="/public/js/survey.js")
	script(src="/public/js/settings.js")
						
