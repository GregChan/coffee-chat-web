html
	head
		link(href='https://fonts.googleapis.com/css?family=Source+Sans+Pro' rel='stylesheet' type='text/css')
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css")
		link(rel="stylesheet" href="/public/css/index.css")
	body
		include ./includes/header.jade
		h2(class="center text-orange") Profile Survey
		h5(class="center text-orange") Help us improve your matches!
		div(class="row container text-orange")			
			for field in survey.fields
				div(class="row" data-field=field.name data-field-id=field.fieldID)
					p=field.name
						if (field.grouped == true)
							ul(class="collapsible popout" data-collapsible="expandable")
								li()
									for key in field.values
										div(class="collapsible-header")=key.name
										div(class="collapsible-body active")
											for item in key.values
												input(data-field-input data-field-id=field.fieldID data-input-id=item.id data-group-name=key.name id=item.id type="checkbox")
												label(for=item.id)=item.name
						else
							if (field.displayType == 1)
								for item in field.values	
									div(class="col s4 m4 l4")
										input(data-field-input data-field-id=field.fieldID data-input-id=item.id id=item.id type="checkbox")
										label(for=item.id)=item.name
							if (field.displayType == 2)
								select(data-field-input data-field-id=field.fieldID type="select")
									option(value="" disabled selected)=field.name
									for year in field.values
										option(value=year.id)=year.name
			div(class="row")
				button(class="btn waves-effect waves-light col coffee-chat-orange offset-s5 submit" type="submit" name="action") Submit
	include ./includes/footer.jade
	script(src="https://code.jquery.com/jquery-2.2.0.min.js")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js")
	script(src="/public/js/survey.js")
						
