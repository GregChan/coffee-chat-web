include ../mixins/editable-text.jade
div(class="section white profile-section profile-edit")
	if title
		h4(class="center")=title
	div(class="row container profile-container" data-edit-area)
		div(class="col s6 offset-s3 m3 offset-m0 l3 offset-l0")
			a(href=profile.linkedInProfile)
				img(class="responsive-img circle coffee-chat-circle" data-profile-image src=profile.profilePic)
			h5(class="center text-grey") #{profile.firstName} #{profile.lastName}
			+editableTextInput(profile.headLine, 0, "center", {},"Head Line")
		div(class="hide" data-edit-template)
			+editableTextInput("", 0, "title", {"data-position":"data"},"Title")
			+editableTextInput("", 0, "subtitle", {"data-company":"data"},"Company / School")
		div(class="col s12 m3 l3")
			if profile.positions
				h5(class="section-title text-orange") Work Experience
				div(class="spacer-15")
				div(data-work-container)
					for work in profile.positions.work
						div(data-work-experience data-position-pair)
							a(class="editable delete-icon" href="#")
								i(class="material-icons" data-delete-icon) delete 
							+editableTextInput(work.title, work.positionID, "title", {"data-position":"data"},"Title")
							+editableTextInput(work.company, work.companyID, "subtitle", {"data-company":"data"},"Company / School")
				div(class="center")
					a(href="#")
						div(class="valign-wrapper text-grey" data-add-icon="data-work-container" data-type="data-work-experience")
							span(class="icon")
								i(class="material-icons") add_circle_outline
							span(class="valign") ADD POSITION
		div(class="col s12 m3 l3")
			if profile.positions
				h5(class="section-title text-orange") Education
				div(class="spacer-15")
				div(data-education-container)
					for edu in profile.positions.education
						div(data-education data-position-pair)
							a(class="editable delete-icon" href="#")
								i(class="material-icons" data-delete-icon) delete
							+editableTextInput(edu.title, edu.positionID, "title", {"data-position":"data"},"Title")
							+editableTextInput(edu.school, edu.schoolID, "subtitle", {"data-company":"data"},"Company / School")
				div(class="center")
					a(href="#")
						div(class="valign-wrapper text-grey" data-add-icon="data-education-container" data-type="data-education")
							span(class="icon")
								i(class="material-icons") add_circle_outline
							span(class="valign") ADD EDUCATION
		div(class="col s12 m3 l3" data-interests)
			h5(class="section-title text-orange") Interests
			if interests && interests.fields
				for field in interests.fields
					for item in field.values
						div ##{item.name}
			else
				div Open the "Show more settings" tab to complete your profile!